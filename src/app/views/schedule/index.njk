{% extends "_layouts/default.njk" %}

{% block body %}
  <div class="content">
    <strong>Seus agendamentos</strong>
    <p>Veja abaixo a lista de agendamentos para hoje:</p>

    <ul class="providers">
    {% for appointment in appointments %}
      <li class="provider">
        <div>
          <img src="/files/{{appointment.user.avatar}}" />
          <strong>{{apointment.user.name}} <br> {{ appointment.date }}</strong>
        </div>
      </li>
    {% endfor %}
    </ul>

    <a href="/app/dashboard" class="logout">Voltar</a>
  </div>

{% endblock %}
